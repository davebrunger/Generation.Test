<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<AssemblyName></AssemblyName>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
		<VersionPrefix>1.0.5</VersionPrefix>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>Readme.md</PackageReadmeFile>
		<Title>WS Domain Modelling</Title>
		<Authors>David Brunger</Authors>
		<Copyright>© 2025 David Brunger</Copyright>
		<PackageProjectUrl>https://github.com/davebrunger/Generation.Test</PackageProjectUrl>
		<RepositoryUrl>https://github.com/davebrunger/Generation.Test.git</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>Code Generation;Domain Modelling</PackageTags>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" PrivateAssets="all" />
		<PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="4.14.0" PrivateAssets="all" />
		<PackageReference Include="System.Collections.Immutable" Version="9.0.7" />
	</ItemGroup>

	<ItemGroup>
		<None Include="../Readme.md" Pack="true" PackagePath="/" />
	</ItemGroup>

	<ItemGroup>
		<None Include="$(OutputPath)/$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\WS.DomainModelling.Common\WS.DomainModelling.Common.csproj">
			<ReferenceOutputAssembly>true</ReferenceOutputAssembly>
			<IncludeAssets>WS.DomainModelling.Common.dll</IncludeAssets>
		</ProjectReference>
	</ItemGroup>

	<Target DependsOnTargets="ResolveReferences" Name="CopyProjectReferencesToPackage">
		<ItemGroup>
			<BuildOutputInPackage Include="@(ReferenceCopyLocalPaths-&gt;WithMetadataValue('ReferenceSourceTarget', 'ProjectReference'))" />
		</ItemGroup>
	</Target>
</Project>
